@import '/mixin/sprite'

*
  margin 0
  padding 0
  box-sizing border-box

p
  margin 0

ul
  list-style none

body
  padding 50px 0
  background url("../img/pattern.png")
  color #787078
  font normal 100% 'Oswald'
.container-fluid
  max-width 1140px
.nav-tabs
  margin 0 0 -6px 0
  .nav-tabs__item
    width 25%
    height 50px
    a
      height 100%
      margin 0
      padding 0
      color #fff
      font bold 24px 'Oswald'
      text-align center
      text-transform uppercase
      &:hover
        border none
        background none
        color #ffffff
    &.active
    &:hover
      z-index 3
      background-position 0 -50px
      a
        border none
        background none
        border-radius 0
        color #ffffff
        &:hover
          background none
          border none
          color #ffffff
  .nav-tabs__item--item0
    background url("../img/tab-bg1.png") repeat-x
  .nav-tabs__item--item1
    background url("../img/tab-bg2.png") repeat-x
  .nav-tabs__item--item2
    background url("../img/tab-bg3.png") repeat-x
  .nav-tabs__item--item3
    background url("../img/tab-bg4.png") repeat-x
.panel-group
  .nav-tabs__item--item0
    .panel-heading
      background url("../img/tab-bg1.png") repeat-x
  .nav-tabs__item--item1
    .panel-heading
      background url("../img/tab-bg2.png") repeat-x
  .nav-tabs__item--item2
    .panel-heading
      background url("../img/tab-bg3.png") repeat-x
  .nav-tabs__item--item3
    .panel-heading
      background url("../img/tab-bg4.png") repeat-x
.tab-content
  position relative
  z-index 2
  background #ffffff
.tab-pane
  min-height 400px
  padding 30px 0
  border-top 3px solid gray
  border-right 2px solid gray
  border-bottom  2px solid gray
  border-left 2px solid gray

.form-item
  clear both
  min-height 30px
  margin 0 0 20px 0
  text-align left
  line-height 26px
  label
    width 140px
    margin 0 10px 10px 0
    font-size 20px
    float left
  .ask-label
    width auto
    margin 0 20px 0 0
  .input-checkbox
    float left
    width 26px
    height 26px
.jq-checkbox.checked
  .jq-checkbox__div
    width 21px
    height 20px
    margin 1px 0 0 1px
    box-shadow none
    background url("../img/check-ico.gif") no-repeat
.input-text
.input-text--adv
  width 165px
  height 30px
  margin 0 10px 0 0
  color #010101
  font-size 14px
.input-text[disabled]
.input-text--adv[disabled]
  border 1px solid #b9bdc4
  background none
.input-text--green
.input-select--green
.input-checkbox--green
  border 2px solid #659c82
  .jq-selectbox__trigger
    background #659c82
.input-text--blue
.input-select--blue
.input-checkbox--blue
  border 2px solid #6b98cd
  .jq-selectbox__trigger
    background #6b98cd
.input-text--red
.input-select--red
.input-checkbox--red
  border 2px solid #c15d55
  .jq-selectbox__trigger
    background #c15d55
.button-wrap
  padding 30px 0
  text-align center
  button
    padding 10px
    border-width 0
    color #000
    font-size 25px

.accordion-toggle
  display block
  width 100%
  height 100%
  color #ffffff!important
  text-transform uppercase

.code-form__email
  width 190px
  height 30px
  padding 0 5px
  color #010101
  font-size 14px
  border 2px solid gray
.code-form__item
  margin 0 0 10px 0
  text-align center
.code-form__submit
  width 150px
  font-size 20px
  border-radius 5px